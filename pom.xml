<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>app-auth</artifactId>
	<packaging>jar</packaging>
	<version>${app-auth-version}</version>

	<parent>
		<groupId>com.TBD.backbone.services</groupId>
		<artifactId>mvn-parent</artifactId>
		<version>1.0</version>
		<relativePath>../mvn-parent/pom.xml</relativePath>
	</parent>

	<dependencies>
		<dependency>
			<groupId>com.TBD.backbone.services</groupId>
			<artifactId>idl-auth</artifactId>
			<version>${idl-auth-version}</version>
		</dependency>
		<dependency>
			<groupId>com.TBD.backbone.services</groupId>
			<artifactId>impl-auth</artifactId>
			<version>${impl-auth-version}</version>
		</dependency>
		<dependency>
			<groupId>com.TBD.backbone.services</groupId>
			<artifactId>mod-tier2-locator</artifactId>
			<version>${mod-tier2-locator-version}</version>
		</dependency>

		<!--This is required for runtime when configuration for SessionValidator -->
 		<dependency>
			<groupId>com.TBD.backbone.services</groupId>
			<artifactId>idl-session</artifactId>
			<version>${idl-session-version}</version>
		</dependency>
		<dependency>
			<groupId>com.TBD.backbone.services</groupId>
			<artifactId>mod-tier0-locator</artifactId>
			<version>${mod-tier0-locator-version}</version>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit-version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<finalName>app-auth</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
					<archive>
						<manifest>
							<mainClass>com.TBD.backbone.services.auth.AuthenticationServiceContainer</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>${maven-dependency-plugin}</version>
				<executions>
					<execution>
						<id>copy-installed</id>
						<phase>install</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.TBD.backbone.services</groupId>
									<artifactId>app-auth</artifactId>
									<version>${app-auth-version}</version>
									<type>jar</type>
									<classifier>jar-with-dependencies</classifier>
									<overWrite>true</overWrite>
									<outputDirectory>../../../Export</outputDirectory>
									<destFileName>app-auth.jar</destFileName>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
</project>